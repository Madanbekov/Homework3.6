<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingHorizontal="16dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fdgdfhs"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:inputType="text"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dgvfd fdvdf"
        android:textSize="12sp"
        android:inputType="text"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="@id/tv_count"
        app:layout_constraintTop_toBottomOf="@id/tv_name_music" />


    <TextView
        android:id="@+id/tv_time_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:42"
        android:inputType="number"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>